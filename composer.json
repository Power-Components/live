{
    "name": "power-components/powergrid-demo-mic",
    "type": "project",
    "description": "Livewire PowerGrid demo",
    "homepage": "https://demo.livewire-powergrid.com",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "guzzlehttp/guzzle": "^7.5.1",
        "laravel/framework": "^10.9.0",
        "laravel/sanctum": "^3.2.5",
        "laravel/tinker": "^2.8.1",
        "livewire/livewire": "^3.0",
        "openspout/openspout": "^4.13.1",
        "power-components/livewire-powergrid": "^5.0@beta",
        "predis/predis": "^2.1.2",
        "wire-elements/modal": "^2.0@beta"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.13",
        "fakerphp/faker": "^1.21.0",
        "laradumps/laradumps": "^2.1",
        "laradumps/laradumps-core": "^0.2.0",
        "laravel/pint": "^1.10",
        "laravel/sail": "^1.21.5",
        "mockery/mockery": "^1.5.1",
        "nunomaduro/collision": "^7.5.2",
        "phpunit/phpunit": "^10.1.2",
        "spatie/laravel-ignition": "^2.1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "fix": [
            "./vendor/bin/pint"
        ],
        "cypress": [
            "cd tests/cypress && npx cypress run"
        ],
        "cypress:open": [
            "cd tests/cypress && npx cypress open"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": false
}
